<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/desc_post_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="고민글 작성"
        android:fontFamily="@font/bm"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorMocaRed"/>

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/desc_post_page_image1"
        app:layout_constraintTop_toBottomOf="@id/desc_post_page_title"
        app:layout_constraintBottom_toTopOf="@+id/desc_post_page_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/desc_post_page_image2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/thumbnailpage"/>

    <ImageView
        android:layout_marginRight="15dp"
        android:id="@+id/desc_post_page_image2"
        app:layout_constraintTop_toBottomOf="@id/desc_post_page_title"
        app:layout_constraintBottom_toTopOf="@+id/desc_post_page_content"
        app:layout_constraintLeft_toRightOf="@+id/desc_post_page_image1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/createpostpage"/>

    <TextView
        android:id="@+id/desc_post_page_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="썸네일을 제작하고 고민글을 올려보자\n고민글이 소외되지 않도록 랜덤푸쉬 설정까지"
        android:textSize="20dp"
        android:textColor="@color/colorMocaRed"
        android:textAlignment="center"
        android:fontFamily="@font/bm"/>

</androidx.constraintlayout.widget.ConstraintLayout>