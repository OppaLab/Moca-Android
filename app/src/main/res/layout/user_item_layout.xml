<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="100dp"
    android:background="@drawable/button_black_background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/search_user_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/search_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="user name"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#8a8a8a"
            android:layout_below="@+id/search_user_profile_image"/>

        <TextView
            android:id="@+id/search_user_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="category"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#8a8a8a"
            android:layout_below="@+id/search_user_name"/>

        <Button
            android:id="@+id/search_follow_btn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@+id/search_user_category"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_black_background"
            android:layout_margin="10dp"
            android:text="팔로우"
            android:textAllCaps="false"/>

    </RelativeLayout>

</RelativeLayout>