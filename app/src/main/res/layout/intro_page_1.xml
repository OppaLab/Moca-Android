<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/desc_home_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/desc_home_page_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="홈 화면 게시글 추천"
        android:fontFamily="@font/bm"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorMocaRed"/>

    <ImageView
        android:id="@+id/desc_home_page_image"
        app:layout_constraintTop_toBottomOf="@id/desc_home_page_title"
        app:layout_constraintBottom_toTopOf="@+id/desc_home_page_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/homepage"/>

    <TextView
        android:id="@+id/desc_home_page_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc_home_page_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="유저의 고민 카테고리와 고민글 분석\n 맞춤형 고민글 추천"
        android:textSize="20dp"
        android:textColor="@color/colorMocaRed"
        android:textAlignment="center"
        android:fontFamily="@font/bm"/>

</androidx.constraintlayout.widget.ConstraintLayout>